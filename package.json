{
  "name": "@sec-ant/wc-qr-code",
  "description": "A QR Code Web Component Powered by Lit",
  "private": false,
  "version": "0.1.1",
  "type": "module",
  "files": [
    "./dist/**/*"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./pure": "./dist/pure.js",
