  "license": "MIT",
  "dependencies": {
    "@sec-ant/qr-code-generator": "^0.0.3",
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "rollup-plugin-minify-html-literals-v3": "^1.3.3",
    "typescript": "^5.1.6",
